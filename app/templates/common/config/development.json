{
    <% if (templateModule) { %>
    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },

    <% if (templateModule === 'dustjs') { %>
    "view engines": {
        "dust": {
            "module": "engine-munger",
            "renderer": {
                "method": "dust",
                "arguments": [
                    { "cache": false },
                    {
                        "views": "config:express.views",
                        "view engine": "config:express.view engine",
                        "specialization": "config:specialization",
                        "i18n": "config:i18n"
                    }
                ]
            }
        }
    },
    <% } else if (templateModule === 'makara') { %>
    "view engines": {
        "dust": {
            "module": "makara",
            "renderer": {
                "method": "dust",
                "arguments": [
                    { "cache": true, "helpers": "config:dust.helpers" }
                ]
            }
        }
    },
    <% } %>
    <% } %>

    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "kraken-devtools",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        <% if (templateModule === 'dustjs') { %>
                        "template": {
                            "module": "kraken-devtools/plugins/dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates",
                            "i18n": "config:i18n"
                        },
                        <% } %>
                        <% if (cssModule) { %>
                        "css": {
                            "module": "kraken-devtools/plugins/<%= cssModule %>",
                            "files": "/css/**/*.css"
                        },
                        <% } %>
                        "copier": {
                            "module": "kraken-devtools/plugins/copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
